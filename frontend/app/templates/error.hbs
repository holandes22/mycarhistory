<div class="container">
    <div class="alert alert-{{unbound determine-error-class controller}}">
        <div>
          <strong>HTTP Status code: {{status}}</strong>
        </div>
        <div>
          Message:
          {{#if message}}
            {{message}}
          {{else}}
            {{#if responseJSON.detail}}
              {{responseJSON.detail}}
            {{else}}
              {{responseText}}
            {{/if}}
          {{/if}}
        </div>
        <div>
          {{hint}}
        </div>
    </div>
</div>
